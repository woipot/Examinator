<Window x:Class="Examinator.Views.StudentInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examinator.Views"
        mc:Ignorable="d"
        Title="Введите данные" Height="220" Width="240" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid>
        <StackPanel >
        <Label HorizontalAlignment="Center" Content="Фамилия имя:"  FontSize="15"/>
        <TextBox x:Name="NameTextBox" Margin="20,0"/>

        <Label HorizontalAlignment="Center" Content="Группа:"  FontSize="15"/>
        <TextBox x:Name="GroupTextBox" Margin="20,0"/>
        <Button Content="Начать тест" Margin="20, 15" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
