<Window x:Class="Examinator.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examinator.Views"
        mc:Ignorable="d"
        Title="Ошибки в тесте" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0"  HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <TextBlock x:Name="Block" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Grid.Row="1" Click="ButtonBase_OnClick"  Content="Вернуться и исправить" VerticalAlignment="Bottom" Margin="0,0,20.2,20" HorizontalAlignment="Right" Grid.Column="1"/>
    </Grid>
</Window>
